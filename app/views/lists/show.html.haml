- page_title @list.name

%p
  = link_to '<b>+</b> Send a message'.html_safe, new_list_message_path(@list), class: 'button'
  = link_to '<b>+</b> New member'.html_safe, new_list_contact_path(@list), class: 'button'

%ul.actions
  %li= link_to 'Import contacts', import_list_path(@list)
  %li= link_to 'Delete list', list_path(@list), method: :delete, confirm: "Are you sure you want to delete the list #{@list.name}?"


