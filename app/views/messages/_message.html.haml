- if message && message.list
  %li[message]
    - unless defined? show_list
      %span.list= message.list.name
      = ' '
    %span.date= message.created_at.to_smart_s
    %span.from [#{format_phone message.from}]
    = message.body
    - if message.in_send_queue?
      %p.status= "Sending #{message.outgoing_count} of #{message.outgoing_total}"