= render 'layouts/head'
%body
  = render 'shared/flashes'
  #site-container
    #site
      = render 'layouts/page_header'
      #content-container
        %ul#main_menu
          = render 'shared/menu_lists'
        #content
          #new-message
            %h4.breadcrumb
              - if @list
                = link_to "List: #{@list.name}", list_path(@list.id)
              - if @title
                - if @list
                  |
                = @title
            - if content_for?(:main_box_content)
              = yield :main_box_content
            - else
              = yield
          #recent-messages
            %h3 RECENT MESSAGES
            #recent-messages-list
              %ul.messages
                - if @list
                  = render partial: 'messages/message', collection: @list.messages.sent.limit(12)
                - else
                  = render partial: 'messages/message', collection: current_organization.messages.sent.limit(20)
            .view
              - if @list
                = link_to "VIEW ALL RECENT MESSAGES", list_path(@list) + "/messages"
              - else
                = link_to "VIEW ALL RECENT MESSAGES", "/messages"
          #dots
      #footer
        = render :partial => '/layouts/footer'
      #bottom-shadow
    #side-shadow
      .top
      .bottom
